#page-layout {

    > .row {

        #hashtags {
            top: 71px;
        }
    }
}
.reveal {
    position: relative;
    height: 100%;

    .hide {
        display: block !important;
        position: absolute;
        z-index: -1;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
    }

    &:hover {
        .hide {
            z-index: 1;
            opacity: 1;
        }
    }
}

.product-grid-item__corner svg {
    position: absolute;
    left: 8px;
    top: 8px;
    z-index: 9;
    max-width: 64px;
    height: auto;
}