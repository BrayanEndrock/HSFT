<div class="container">
    <div class="row">
        <div class="col text-center">
            <h2>{{ page.title }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <h3 class="hidden-xs">Contents</h3>
            <div class="tab-menu_wrapper">
                <input type="checkbox" id="faq-tab-menu" class="hidden-md hidden-lg hidden-xl">
                <label for="faq-tab-menu" class="hidden-md hidden-lg hidden-xl">Contents<svg width="19" height="10" viewBox="0 0 19 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L9.5 9L18 1" stroke="black" stroke-linejoin="round"/>
                    </svg>
                    </label>
                <ul class="tab-menu">
                    <li><span data-href="shipping-policy" class="active">Shipping Policy</span></li>
                    <li><span data-href="returns-policy">Returns Policy</span></li>
                    <li><span data-href="privacy-policy">Privacy Policy</span></li>
                    <li><span data-href="contact">Contact</span></li>
                    
                </ul>
            </div>            
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="tab-panels">
                <section id="shipping-policy" class="tab-panel active">
                    {%for block in section.blocks%}
                        {%if block.type == 'shipping_policy'%}
                            {% include 'faq-qa' %}
                        {%endif%}
                    {%endfor%}
                </section>
                <section id="returns-policy" class="tab-panel">
                    {%for block in section.blocks%}
                        {%if block.type == 'returns_policy'%}
                            {% include 'faq-qa' %}
                        {%endif%}
                    {%endfor%}
                </section>
                <section id="privacy-policy" class="tab-panel">
                    {%for block in section.blocks%}
                        {%if block.type == 'privacy_policy'%}
                            {% include 'faq-qa' %}
                        {%endif%}
                    {%endfor%}
                </section>
                <section id="contact" class="tab-panel">
                    {%for block in section.blocks%}
                        {%if block.type == 'contact'%}
                            {% include 'faq-qa' %}
                        {%endif%}
                    {%endfor%}
                </section>
            </div>            
        </div>
    </div>
</div>

